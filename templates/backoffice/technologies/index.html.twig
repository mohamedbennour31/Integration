{% extends 'backoffice/baseback.html.twig' %}

{% block title %}Technologies{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                       
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                           {% if projets is empty %}
    <p>Aucun Technologie pour le moment.</p>
    <div style="width: 20%;">
<a href="{{ path('ajouter_technologie') }}" class="btn bg-gradient-info btn-lg w-100">
    Nouvelle technologie
</a>
  </div>
  {% else %}
   <div class="d-flex align-items-center">
  <div class="flex-grow-1">
    <p>Tous Les Technologies.</p>
  </div>
  <div style="width: 20%;">
<a href="{{ path('ajouter_technologie') }}" class="btn bg-gradient-info btn-lg w-100">
    Nouvelle technologie
</a>
  </div>
</div>

                        </div>

            <div class="card">
                       
                                            <div class="card-header">

                                                <h3 class="card-title">All Technologies</h3>
                                    
                                            </div>
                                            
              <!-- /.card-header -->
                <div class="card-body p-0">
                    <table class="table">
                        <thead>
                            <th>Nom</th>
          <th>Type</th>
          <th>complexite</th>
          <th>documentaire</th>
          <th>compatibilite</th>
          <th>action</th>
                            </tr>
                        </thead>
                        <tbody>
        {% for projet in projets %}

                            <tr>
                             <td>{{ projet.NomTech }}</td>
            <td>{{ projet.typeTech   }}</td>
            <td>{{ projet.complexite }}</td>
            <td>{{ projet.documentaire }}</td>
            <td>{{ projet.compatibilite }}</td>
            <td>
                    <div class="d-flex p">
                    <a href="{{ path('modifier_technologie', { id: projet.id }) }}" class="btn bg-gradient-primary w-30 m-2 me-2">Update</a>
                        <form method="post" action="{{ path('supprimer_technologie', {id: projet.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="w-50 m-2">
        <input type="hidden" name="_token" value="{{ csrf_token('supprimer' ~ projet.id) }}">
        <button class="btn bg-gradient-danger w-30">Delete</button>
    </form>
                    </div>

            </td>
                            </tr>
        {% endfor %}
                        
                        </tbody>
                    </table>
                </div>


              <!-- /.card-body -->
         </div>
  {% endif %}





                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}