{% extends 'backoffice/baseback.html.twig' %}

{% block title %}Modifier une Communauté{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block content %}
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Modifier la Communauté</h3>
        </div>
        <div class="card-body">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Informations de la Communauté</h3>
            </div>
            {{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}
            <div class="card-body">
              <div class="form-group">
                {{ form_label(form.nom, 'Nom de la Communauté') }}
                {{ form_widget(form.nom, {
                  'attr': {
                    'class': 'form-control' ~ (form.nom.vars.errors|length ? ' is-invalid'),
                    'placeholder': 'Entrez le nom de la communauté'
                  }
                }) }}
                {{ form_errors(form.nom) }}
              </div>
              <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {
                  'attr': {
                    'class': 'form-control' ~ (form.description.vars.errors|length ? ' is-invalid'),
                    'placeholder': 'Description de la communauté',
                    'rows': '4'
                  }
                }) }}
                {{ form_errors(form.description) }}
              </div>
              <div class="form-group">
                {{ form_label(form.idHackathon, 'Hackathon associé') }}
                {{ form_widget(form.idHackathon, {
                  'attr': {
                    'class': 'form-control' ~ (form.idHackathon.vars.errors|length ? ' is-invalid')
                  }
                }) }}
                {{ form_errors(form.idHackathon) }}
              </div>
              <div class="form-group">
                <div class="form-check">
                  {{ form_widget(form.isActive, {
                    'attr': {
                      'class': 'form-check-input' ~ (form.isActive.vars.errors|length ? ' is-invalid')
                    }
                  }) }}
                  {{ form_label(form.isActive, 'Actif', {'label_attr': {'class': 'form-check-label'}}) }}
                  {{ form_errors(form.isActive) }}
                </div>
              </div>
            </div>
            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Enregistrer</button>
              <a href="{{ path('app_communaute_back') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %} 