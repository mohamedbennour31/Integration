{# templates/evaluation/pdf.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Evaluations PDF</title>
		<style>
			body {
				font-family: sans-serif;
				font-size: 12px;
			}
			table {
				width: 100%;
				border-collapse: collapse;
				margin-bottom: 20px;
			}
			th,
			td {
				border: 1px solid #000;
				padding: 4px;
				text-align: left;
			}
			th {
				background: #f0f0f0;
			}
		</style>
	</head>
	<body>
		<h1>Evaluations Report</h1>
		<table>
			<thead>
				<tr>
					<th>#</th>
					<th>Jury</th>
					<th>Hackathon</th>
					<th>Project</th>
					<th>Tech Note</th>
					<th>Innovation Note</th>
					<th>Date</th>
					<th>Votes</th>
				</tr>
			</thead>
			<tbody>
				{% for evaluation in evaluations %}
					<tr>
						<td>{{ evaluation.id }}</td>
						<td>{{ evaluation.idJury }}</td>
						<td>{{ evaluation.idHackathon }}</td>
						<td>{{ evaluation.idProjet }}</td>
						<td>{{ evaluation.noteTech }}</td>
						<td>{{ evaluation.noteInnov }}</td>
						<td>{{ evaluation.date|date('Y-m-d') }}</td>
						<td>
							{% for vote in evaluation.votes %}
								üó≥Ô∏è
								{{ vote.valeurVote }}<br>
							{% else %}
								<em>No votes</em>
							{% endfor %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</body>
</html>
