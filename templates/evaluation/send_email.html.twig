{# templates/email/send.html.twig #}
{% extends 'evaluation/baseBack.html.twig' %}

{% block title %}Send Email | Hackify
{% endblock %}

{% block content %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-lg-8">
				<div class="card shadow-lg">
					<div class="card-header" style="background-color: #1b3347;">
						<h2 class="h4 text-white mb-0">
							<i class="bi bi-envelope me-2"></i>
							Compose Email
						</h2>
					</div>

					<div class="card-body p-4">
						{{ form_start(form) }}
						{{ form_row(form.recipient_email, {
                            'attr': {
                                'class': 'form-control-lg',
                                'placeholder': 'recipient@example.com'
                            },
                            'row_attr': {'class': 'mb-4'}
                        }) }}

						{{ form_row(form.subject, {
                            'attr': {'class': 'form-control-lg'},
                            'row_attr': {'class': 'mb-4'}
                        }) }}

						{{ form_row(form.body, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 8,
                                'style': 'min-height: 200px;'
                            },
                            'row_attr': {'class': 'mb-4'}
                        }) }}

						<div class="d-grid">
							<button type="submit" class="btn btn-primary btn-lg">
								<i class="bi bi-send-fill me-2"></i>
								Send Email
							</button>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<style>
		.form-control-lg {
			padding: 1rem;
			font-size: 1rem;
		}
		.form-control {
			border-radius: 0.25rem;
		}
		.card {
			border: none;
			border-radius: 0.5rem;
		}
	</style>
{% endblock %}
