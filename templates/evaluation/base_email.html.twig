{# templates/emails/contact.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>New Support Request:
			{{ subject }}</title>
	</head>
	<body>
		<div style="max-width: 600px; margin: 0 auto; font-family: Arial, sans-serif;">
			<div style="background-color: #1b3347; color: white; padding: 20px;">
				<h1 style="margin: 0;">New Support Request</h1>
			</div>

			<div style="padding: 20px; background-color: #f9f9f9;">
				<p>
					<strong>From:</strong>
					{{ sender }}</p>
				<p>
					<strong>Subject:</strong>
					{{ subject }}</p>
				<hr>
				<div style="white-space: pre-wrap;">{{ body }}</div>
			</div>

			<div style="padding: 15px; text-align: center; font-size: 12px; color: #777;">
				<p>Received at
					{{ "now"|date("Y-m-d H:i") }}</p>
			</div>
		</div>
	</body>
</html>
